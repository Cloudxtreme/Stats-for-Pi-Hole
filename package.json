{
  "name": "Stats_for_Pi-Hole",
  "productName": "Stats-for-Pi-Hole",
  "author": {
    "name": "KeystoneJack"

  },
  "license": "MIT",
  "version": "1.1.0",
  
  "description": "Tray app for checking your DNS block stats",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "build"
  },
  "keywords": [
    "Tray",
    "electron",
    "DNS",
    "Raspberry Pi"
  ],
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "KeystoneJack",
        "repo": "Stats-for-Pi-Hole"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 150,
          "y": 210
        },
        {
          "x": 380,
          "y": 210,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-log": "^2.2.14",
    "electron-store": "^1.3.0",
    "electron-traywindow-positioner": "^0.0.2",
    "electron-updater": "^2.21.10",
    "jquery": "^3.3.1"
  },
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "electron-store": "^1.3.0",
    "electron-traywindow-positioner": "^0.0.2",
    "jquery": "^3.3.1"
  }
}
